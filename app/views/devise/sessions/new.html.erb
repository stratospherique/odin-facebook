<section class="login-container">
  <div class="form">
    <div>
      <h2>Log in</h2>
      <p class="alert"><%= alert %></p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name) ,html: {class: "login-form"}) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class: "input-field", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "button" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

</section>